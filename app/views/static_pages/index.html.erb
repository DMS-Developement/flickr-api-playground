<h2> Welcome to Flickr Photo Search! </h2>
<br>
<%= form_with url: '/search_flickr', method: :get do %>
  <%= label_tag(:query, "Input someones Flickr ID: ") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @photo_urls.present? %>
  <% @photo_urls.each do |photo_url| %>
  <div class="photo">
    <%= image_tag("#{photo_url}") %>
  </div>
  <% end %>
<% end %>